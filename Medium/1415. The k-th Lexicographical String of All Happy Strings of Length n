class Solution {
    List<String> happy = new ArrayList<>();

    public String getHappyString(int n, int k) {
        char[] chars = { 'a', 'b', 'c' };
        generateHappyStrings("", n, chars);
        return k > happy.size() ? "" : happy.get(k - 1);
    }

    private void generateHappyStrings(String path, int n, char[] chars) {
        if (path.length() == n) {
            happy.add(path);
            return;
        }

        for (char ch : chars) {
            if (path.isEmpty() || path.charAt(path.length() - 1) != ch) {
                generateHappyStrings(path + ch, n, chars);
            }
        }
    }
}
