/**
 * Definition for a binary tree node.
 * public class TreeNode {
 *     int val;
 *     TreeNode left;
 *     TreeNode right;
 *     TreeNode() {}
 *     TreeNode(int val) { this.val = val; }
 *     TreeNode(int val, TreeNode left, TreeNode right) {
 *         this.val = val;
 *         this.left = left;
 *         this.right = right;
 *     }
 * }
 */
class Solution {
    public long kthLargestLevelSum(TreeNode root, int k) {
        Queue<TreeNode> q = new LinkedList<>();
        PriorityQueue<Long> pq = new PriorityQueue<>();
        int level = 0;
        q.add(root);

        while (!q.isEmpty()) {
            int size = q.size();
            long currSum = 0;

            for (int i = 0; i < size; i++) {
                TreeNode n = q.poll();
                currSum += n.val;

                if (n.left != null) {
                    q.add(n.left);
                }
                if (n.right != null) {
                    q.add(n.right);
                }
            }
            level++;
            pq.add(currSum);

            while (pq.size() > k) {
                pq.poll();
            }
        }

        if (level < k) {
            return -1;
        }

        return pq.peek();
    }
}
