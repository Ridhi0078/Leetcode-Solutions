class Solution {
    public int numberOfPairs(int[][] points) {
        // sort the array in the ascending order of x and if same then in the descending order of y.
        Arrays.sort(points, (a, b) -> a[0] == b[0] ? b[1] - a[1] : a[0] - b[0]);

        int count = 0;
        for (int i = 0; i < points.length; i++) {
            int x0 = points[i][0], y0 = points[i][1];
            int lowerPoint = -1;

            // we have to see if lowerpoint<y[j]<=y[i]
            for (int j = i + 1; j < points.length; j++) {
                int x1 = points[j][0], y1 = points[j][1];

                if (lowerPoint < y1 && y1 <= y0) {
                    lowerPoint = y1;
                    count++;

                    if (y1 == y0) {
                        break;
                    }
                }
            }
        }
        return count;
    }
}
