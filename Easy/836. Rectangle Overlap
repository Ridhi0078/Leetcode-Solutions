class Solution {
    public boolean isRectangleOverlap(int[] rec1, int[] rec2) {
        int x0 = rec1[0], x2 = rec2[0];
        int y0 = rec1[1], y2 = rec2[1];
        int x1 = rec1[2], x3 = rec2[2];
        int y1 = rec1[3], y3 = rec2[3];

        // rec1[2] <= rec2[0] --> rec1 is to the left of rec2
        // rec1[0] >= rec2[2] --> rec1 is to the right of rec2
        // rec1[3] <= rec2[1] --> rec1 is below rec2
        // rec1[1] >= rec2[3] --> rec1 is above rec2

        if (x1 <= x2 || x0 >= x3 || y1 <= y2 || y0 >= y3) {
            return false;
        }
        return true;
    }
}
