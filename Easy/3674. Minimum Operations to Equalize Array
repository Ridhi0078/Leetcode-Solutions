class Solution {
    public int minOperations(int[] nums) {
        int flag = 1;

        if(nums.length==1){
            return 0;
        }

        for (int i = 1; i < nums.length; i++) {
            if (nums[i] != nums[i - 1]) {
                flag = 0;
                break;
            }
        }

        if (flag == 0) {
            return 1;
        }
        return 0;
    }
}
