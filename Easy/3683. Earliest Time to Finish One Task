class Solution {
    public int earliestTime(int[][] tasks) {
        int min=Integer.MAX_VALUE;
        for(int i=0;i<tasks.length;i++){
            int start=tasks[i][0];
            int end=tasks[i][1];

            int sum=start+end;

            min=Math.min(min,sum);
        }
        return min;
    }
}
