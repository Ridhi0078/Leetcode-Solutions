class Solution {
    public int maximum69Number(int num) {
        List<Integer> list = new ArrayList<>();
        while (num > 0) {
            list.add(num % 10);
            num /= 10;
        }

        boolean isChanged = true;
        Collections.reverse(list);
        for (int i = 0; i < list.size(); i++) {
            if (list.get(i) == 9) {
                continue;
            } else if (list.get(i) == 6 && isChanged == true) {
                list.set(i, 9);
                isChanged = false;
            }
        }

        long n = 0;
        for (int digit : list) {
            n = n * 10 + digit;
        }
        return (int) n;
    }
}
